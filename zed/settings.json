{
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "codegemma:latest"
    },
    "version": "2"
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "language_servers": ["basedpyright", "!pyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "theme": "Everforest Dark",
  "base_keymap": "VSCode",
  "buffer_font_family": "CaskaydiaCove Nerd Font Mono",
  "buffer_font_size": 12.5,
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "buffer_line_height": {
    "custom": 1.7
  },
  "terminal": {
    "font_family": "CaskaydiaCove Nerd Font Mono",
    "font_size": 12,
    "line_height": {
      "custom": 1.7
    }
  },
  "inlay_hints": {
    "enabled": false
  }
}
